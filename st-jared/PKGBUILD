# Contributor: Christoph Vigano <mail@cvigano.de>

_pkgname=st
pkgname=$_pkgname-jared
pkgver=0.8.3.r19.g9ba7ecf
pkgrel=1
pkgdesc='A simple virtual terminal emulator for X.'
arch=('i686' 'x86_64' 'armv7h')
license=('MIT')
depends=(libxft)
makedepends=('ncurses' 'libxext' 'git')
provides=(st)
conflicts=(st)
url=https://st.suckless.org
source=(git://git.suckless.org/st
	terminfo.patch::https://aur.archlinux.org/cgit/aur.git/plain/terminfo.patch?h=st-git
	https://aur.archlinux.org/cgit/aur.git/plain/README.terminfo.rst?h=st-git
  https://raw.githubusercontent.com/jaredforrest/PKGBUILDS/master/st-jared/st-jared.patch)
sha256sums=(SKIP
	    SKIP
      SKIP
      SKIP)
_gitname="st"	    
_sourcedir="$_gitname"
_makeopts="--directory=$_sourcedir"
_startdir=$PWD

pkgver() {
    cd "${srcdir}/st"
    git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
    cd "$_pkgname"
    patch --forward --strip=1 --input="${srcdir}/terminfo.patch"
    patch --forward --strip=1 --input="${srcdir}/st-jared.patch"
}

build() {
  cd $_pkgname
  make $_makeopts X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  local installopts='--mode 0644 -D --target-directory'
  local shrdir="$pkgdir/usr/share"
  local licdir="$shrdir/licenses/$pkgname"
  local docdir="$shrdir/doc/$pkgname"
  make $_makeopts PREFIX=/usr DESTDIR="$pkgdir" install
  install $installopts "$licdir" "$_sourcedir/LICENSE"
  install $installopts "$docdir" "$_sourcedir/README"
  install $installopts "$docdir" README.terminfo.rst
  install $installopts "$shrdir/$pkgname" "$_sourcedir/st.info"
}


